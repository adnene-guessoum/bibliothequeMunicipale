{
  "root": true,
  "ignorePatterns": ["**/*.html"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "[iI]gnored",
        "varsIgnorePattern": "[iI]gnored"
      }
    ]
  },
  "plugins": ["prettier"],
  "extends": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
