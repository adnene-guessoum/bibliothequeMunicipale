<%- include("partials/header") %>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-2">
				<%- include("partials/sidebar") %>

			</div>
			<div class="col-sm-10">

				<h1>Titre : <%= livre.titre %></h1>

				<p>
				<strong>Auteur :</strong>
				<a href="<%= livre.auteur.url %>">
					<%= livre.auteur.nom %>
				</a>
				</p>

				<p>
				<strong>Résumé :</strong>
					<%= livre.resume %>
				</a>
				</p>

				<p>
				<strong>ISBN :</strong>
					<%= livre.isbn %>
				</a>
				</p>

					<p>
				<strong>Genre :</strong>











						<% if (genre_livres.length == 0) { %>
						<p>Ce genre n'a pas de livres.</p>
						<% } else { %>
						<% for ( let livre of genre_livres) { %>
						<dt><a href= "<%= livre.url %>" ><%= livre.titre %></a>
							<dd>
								<%= livre.resume %>
							</dd>
						</dt>
						<% } %>
						<% } %>
					</p>

				</div>
			</div>
		</div>
	</div>

</body>
</html>
