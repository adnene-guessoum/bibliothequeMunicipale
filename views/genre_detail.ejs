<%- include("partials/header") %>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-2">
				<%- include("partials/sidebar") %>

			</div>
			<div class="col-sm-10">

				<h1>Genre : <%= genre.genre %></h1>
				<div style='margin-left:20px; margin-top: 20px'>

					<h4>Livres</h4>

					<dl>
					<% if (genre_livres.length == 0) { %>
					<p>Ce genre n'a pas de livres.</p>
					<% } else { %>
					<% for ( let livre of genre_livres) { %>
					<dt><a href= "<%= livre.url %>" ><%= livre.titre %></a>
					<dd>
						<%= livre.resume %>
					</dd>
					</dt>
					<% } %>
					<% } %>
					</dl>

				</div>
			</div>
		</div>
	</div>

</body>
</html>
