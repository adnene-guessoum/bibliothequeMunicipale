<%- include("partials/header") %>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-2">
				<%- include("partials/sidebar") %>

			</div>
			<div class="col-sm-10">
				<h1><%= titre %></h1>
				<ul>
					<% if (liste_auteurs.length == 0) { %>
					<li> Il n'y a pas d'auteurs.</li>
					<% } else { %>
					<% for ( let auteur of liste_auteurs) { %>
					<li><a href= auteur.url ><%= auteur.nom %></a>(<%= auteur.date_naissance_format %> - <%= auteur.date_mort_format %>)</li>
					<% } %>
					<% } %>
				</ul>
			</div>
		</div>
	</div>

</body>
</html>
