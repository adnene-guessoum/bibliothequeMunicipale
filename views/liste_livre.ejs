<%- include("partials/header") %>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-2">
				<%- include("partials/sidebar") %>

			</div>
			<div class="col-sm-10">
				<h1><%= titre %></h1>
				<ul>
					<% if (liste_livre.length == 0) { %>
					<li> Il n'y a pas de livres.</li>
					<% } else { %>
					<% for ( let livre of liste_livre) { %>
					<li><a href= livre.url ><%= livre.titre %></a>(<%= livre.auteur.nom %>)</li>
					<% } %>
					<% } %>
				</ul>
			</div>
		</div>
	</div>

</body>
</html>
